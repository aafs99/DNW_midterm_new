<!-- view_bookings.ejs -->
<!-- Reservation summary page for the organiser -->
<!-- START -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reservation Summary | Flavor Academy</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/organiser.css">
    <link rel="stylesheet" href="/main.css">
</head>
<body>

    <!-- navigation bar -->
    <nav class="navbar navbar-custom mb-4">
        <div class="container-fluid justify-content-end align-items-center" style="height: 100%;">
            <span class="navbar-brand mb-0">Flavor Academy</span>
        </div>
    </nav>

    <!-- logout button -->
    <div class="mt-2 mb-4 home-btn-left">
        <a href="/logout" class="btn btn-outline-light btn-sm">Logout</a>
    </div>

    <!-- page header -->
    <div class="container mt-5">
        <h1 class="text-center mb-4">Workshop Reservations</h1>
<!-- END -->

        <% if (events.length === 0) { %>
            <p class="text-center text-muted">No workshops found.</p>
        <% } else { %>
            <% events.forEach(event => { %>
                <div class="card card-accent mb-4">
                    <div class="card-header">
                        <h4 class="mb-0"><%= event.title %></h4>
                        <small class="text-muted">Date: <%= event.event_date %></small>
                    </div>
                    <div class="card-body">
                        <% if (event.bookings.length === 0) { %>
                            <p class="text-muted">No reservations yet for this workshop.</p>
                        <% } else { %>
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Guest Name</th>
                                            <th>Email</th>
                                            <th>Seat Type</th>
                                            <th>Qty</th>
                                            <th>Dietary Notes</th>
                                            <th>Booked On</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% event.bookings.forEach(b => { %>
                                            <tr>
                                                <td><strong><%= b.attendee_name %></strong></td>
                                                <td><%= b.attendee_email || 'N/A' %></td>
                                                <td>
                                                    <% if (b.ticket_type === 'full') { %>
                                                        Standard
                                                    <% } else if (b.ticket_type === 'concession') { %>
                                                        Student/Senior
                                                    <% } else { %>
                                                        <%= b.ticket_type %>
                                                    <% } %>
                                                </td>
                                                <td><%= b.quantity %></td>
                                                <td>
                                                    <% if (b.dietary_notes) { %>
                                                        <span class="badge bg-warning text-dark"><%= b.dietary_notes %></span>
                                                    <% } else { %>
                                                        <span class="text-muted">None</span>
                                                    <% } %>
                                                </td>
                                                <td><%= b.booking_date.slice(0, 10) %></td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                            <!-- booking count summary -->
                            <p class="mt-2 mb-0">
                                <strong>Total Reservations:</strong> <%= event.bookings.length %>
                            </p>
                        <% } %>
                    </div>
                </div>
            <% }) %>
        <% } %>

<!-- START -->
        <!-- back to chef dashboard -->
        <div class="text-center mt-4">
            <a href="/organiser" class="btn btn-accent">Back to Chef Dashboard</a>
        </div>
    </div>

    <!-- footer spacing -->
    <div class="mb-5"></div>

</body>
</html>
<!-- END -->
