<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Waitlist Management | Flavour Academy</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/organiser.css">
    <link rel="stylesheet" href="/main.css">
</head>
<body>

    <nav class="navbar navbar-custom mb-4">
        <div class="container-fluid justify-content-end align-items-center" style="height: 100%;">
            <span class="navbar-brand mb-0">Flavour Academy</span>
        </div>
    </nav>

    <div class="mt-2 mb-4 home-btn-left">
        <a href="/organiser" class="btn btn-outline-light btn-sm">Back</a>
    </div>

    <div class="container mt-5">
        <h1 class="text-center mb-2">Waitlist Management</h1>
        <p class="text-center text-muted mb-4">
            <% if (typeof totalEntries !== 'undefined') { %>
                <%= totalEntries %> people waiting across all events
            <% } %>
        </p>

        <% if (typeof waitlistByEvent === 'undefined' || waitlistByEvent.length === 0) { %>
            <div class="text-center py-5">
                <p class="text-muted">No one is currently on any waitlist.</p>
            </div>
        <% } else { %>
            <% waitlistByEvent.forEach(event => { %>
                <div class="card card-accent mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div>
                            <h4 class="mb-0"><%= event.event_title %></h4>
                            <small class="text-muted">Date: <%= event.event_date %></small>
                        </div>
                        <span class="badge bg-warning text-dark"><%= event.entries.length %> waiting</span>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Position</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Type</th>
                                        <th>Qty</th>
                                        <th>Requested</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% event.entries.forEach(entry => { %>
                                        <tr>
                                            <td><span class="badge bg-secondary">#<%= entry.position %></span></td>
                                            <td><%= entry.attendee_name %></td>
                                            <td><a href="mailto:<%= entry.attendee_email %>" class="text-info"><%= entry.attendee_email %></a></td>
                                            <td><%= entry.ticket_type === 'full' ? 'Full' : 'Concession' %></td>
                                            <td><%= entry.quantity %></td>
                                            <td><%= entry.requested_at.slice(0, 10) %></td>
                                            <td>
                                                <form method="POST" action="/organiser/waitlist/notify/<%= entry.waitlist_id %>" class="d-inline">
                                                    <button type="submit" class="btn btn-sm btn-outline-success">Notify</button>
                                                </form>
                                                <form method="POST" action="/organiser/waitlist/remove/<%= entry.waitlist_id %>" class="d-inline">
                                                    <button type="submit" class="btn btn-sm btn-outline-danger">Remove</button>
                                                </form>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } %>

        <div class="text-center mt-4">
            <a href="/organiser" class="btn btn-accent">Back to Dashboard</a>
        </div>
    </div>

    <div class="mb-5"></div>
</body>
</html>